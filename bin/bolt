#!/usr/bin/env ruby

# 
#  bolt
#  bolt
#  
#  Created by Ben McRedmond on 2010-01-08.
#  Copyright 2010 Ben McRedmond. All rights reserved.
# 

unless ENV['BOLT_DEV'] == "true"
  begin
    require 'bolt'  
  rescue LoadError
    require 'rubygems'
    require 'bolt'
  end
else
  base = File.expand_path("#{File.dirname(File.dirname(__FILE__))}")
  $:.push("#{base}/lib/")
  require 'bolt.rb'
  require 'rubygems'
end

b = Bolt::Bolt.new
b.run